<div id="school_index_map"></div>

<center><%= link_to new_school_path, class: "btn btn-red btn-mini" do %> <i class="fa fa-plus fa-3x"></i> <% end %></center><br>
<div class="school_cards_container">
  <% @schools.each do |school| %>
  <div class="school_card" data-latitude="<%= school.latitude %>" data-longitude="<%= school.longitude %>" data-name="<%= school.name %>">
    <h3 class="text-center"><%= link_to school.name, school %></h3>
    <div class="fa-row row">
      <div class="col-xs-4">
        <%= link_to school.website, target: "_blank" do %><i class="fa fa-globe"></i><% end %>
      </div>
      <div class="col-xs-4">
        <%= link_to school.facebook, target: "_blank" do %><i class="fa fa-facebook"></i><% end %>
      </div>
      <div class="col-xs-4">
        <%= link_to school.twitter, target: "_blank" do %><i class="fa fa-twitter"></i><% end %>
      </div>
    </div>
    <h4><%= number_with_delimiter(school.students) %> Students</h4>
    <center><%= link_to "Wiki", school.wiki, class: "btn btn-green btn-mini" %></center><br>
    <h3 class="text-center" id="sga">Student Government</h3>
    <div class="fa-row row">
      <div class="col-xs-4">
        <%= link_to school.sga_website, target: "_blank" do %><i class="fa fa-globe"></i><% end %>
      </div>
      <div class="col-xs-4">
        <%= link_to school.sga_facebook, target: "_blank" do %><i class="fa fa-facebook"></i><% end %>
      </div>
      <div class="col-xs-4">
        <%= link_to school.sga_twitter, target: "_blank" do %><i class="fa fa-twitter"></i><% end %>
      </div>
    </div>
    <h4><%= number_to_currency(school.budget, precision: 0) %></h4>
    <center><%= link_to "Paper", school.newspaper, class: "btn btn-mini btn-green" %></center>
    <div class="fa-row row">
      <div class="col-xs-4">
        <%= link_to school do %><i class="fa fa-bullseye"></i><% end %>
      </div>
      <div class="col-xs-4">
        <%= link_to edit_school_path(school) do %><i class="fa fa-cog"></i><% end %>
      </div>
      <div class="col-xs-4">
        <%= link_to school, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="fa fa-times-circle-o"></i><% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>




