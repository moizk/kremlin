<h1 class="text-center"><%= @school.name %></h1>
<div class="container school_show_container">
  <h3 class="text-center">School</h3>
  <div class="fa-row row">
    <div class="col-xs-4">
      <%= link_to @school.website do %><i class="fa fa-globe"></i><% end %>
    </div>
    <div class="col-xs-4">
      <%= link_to @school.facebook do %><i class="fa fa-facebook"></i><% end %>
    </div>
    <div class="col-xs-4">
      <%= link_to @school.twitter do %><i class="fa fa-twitter"></i><% end %>
    </div>
  </div>
  <br>
  <center><%= link_to "Wiki", @school.wiki, class: "btn btn-green btn-mini" %></center>
  <br>
  <h4><b><%= @school.students %></b><br><small>Undergraduate Students</small></h4>
  <h4><b><%= number_to_currency(@school.saf) %></b><br><small>Student Activity Fee</small></h4>
  <h4><b><%= number_to_currency(@school.budget, precision: 0) %></b><br><small>SGA Budget</small></h4>
  <h3 class="text-center">Student Government</h3>
  <div class="fa-row row">
    <div class="col-xs-4">
      <%= link_to @school.sga_website do %><i class="fa fa-globe"></i><% end %>
    </div>
    <div class="col-xs-4">
      <%= link_to @school.sga_facebook do %><i class="fa fa-facebook"></i><% end %>
    </div>
    <div class="col-xs-4">
      <%= link_to @school.sga_twitter do %><i class="fa fa-twitter"></i><% end %>
    </div>
  </div>
  <br>
  <center><%= link_to "Paper", @school.newspaper, class: "btn btn-green btn-mini" %></center>
  <br>
  <h3 class="text-center">Competitor</h3>
  <h4><%= @school.competitor.name %></h4>
</div>

<% @school.people.each do |person| %>
  <div class="person_business_card">
    <h1 class="text-center"><%= person.full_name.titleize %></h1>
    <h5 class="text-center"><%= person.title %></h5>
    <h4 class="text-center"><%= person.school.name %></h4>
    <hr>
    <div class="row text-center">
      <i class="fa fa-phone fa-2x"></i><br>
      <%= number_to_phone person.phone %><br>
    </div>
    <br>
    <div class="row text-center">
      <i class="fa  fa-envelope-o fa-2x"></i><br>
      <%= person.email %>
    </div>
    <hr>
    <legend>Social</legend>
    <div class="row fa-row">
      <div class="col-xs-4">
        <%= link_to person.facebook do %><i class="fa fa-facebook"></i><% end %>
      </div>
      <div class="col-xs-4">
        <%= link_to person.twitter do %><i class="fa fa-twitter"></i><% end %>
      </div>
      <div class="col-xs-4">
        <%= link_to person.linkedin do %><i class="fa fa-linkedin"></i><% end %>
      </div>
    </div>
    <div class="row fa-row">
      <div class="col-xs-4">
        <%= link_to person.school do %><i class="fa fa-book"></i> <% end %>
      </div>
      <div class="col-xs-4">
        <%= link_to edit_person_path(person) do %><i class="fa fa-cog"></i> <% end %>
      </div>
      <div class="col-xs-4">
        <%= link_to person, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="fa fa-times-circle-o"></i><% end %>
      </div>
    </div>
  </div>
  <% end %>