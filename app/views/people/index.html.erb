<center><%= link_to new_person_path, class: "btn btn-red btn-mini" do %> <i class="fa fa-plus fa-3x"></i> <% end %></center>

<div class="container">
  <% @people.each do |person| %>
  <div class="person_business_card">
    <h1 class="text-center"><%= person.full_name.titleize %></h1>
    <h5 class="text-center"><%= person.title %></h5>
    <h4 class="text-center"><%= person.school.name %></h4>
    <hr>
    <div class="row text-center">
      <div class="col-xs-6">
        <i class="fa fa-phone fa-2x"></i><br>
        <%= number_to_phone person.phone %>
      </div>
      <div class="col-xs-6">
        <i class="fa  fa-envelope-o fa-2x"></i><br>
        <%= person.email %>
      </div>
    </div>
    <hr>
    <legend>Social</legend>
    <div class="row fa-row">
      <div class="col-xs-4">
        <%= link_to person.facebook do %><i class="fa fa-facebook"></i><% end %>
      </div>
      <div class="col-xs-4">
        <%= link_to person.twitter do %><i class="fa fa-twitter"></i><% end %>
      </div>
      <div class="col-xs-4">
        <%= link_to person.linkedin do %><i class="fa fa-linkedin"></i><% end %>
      </div>
    </div>
    <div class="text-center">
      <br>
      <%= link_to 'Edit', edit_person_path(person), class: "btn btn-yellow btn-mini" %>
      <%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-red btn-mini' %>
    </div>
      <br>
  </div>
  <% end %>
</div>