<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <legend>Details</legend>
  <div class="field">
    <%= f.text_field :first_name, placeholder: "Steve" %>
  </div>
  <div class="field">
    <%= f.text_field :last_name, placeholder: "Jobs" %>
  </div>
  <div class="field">
    <%= f.text_field :title, placeholder: "CEO" %>
  </div>
  <div class="field">
    <%= f.text_field :phone, placeholder: "408-996-1010" %>
  </div>
  <div class="field">
    <%= f.text_field :email, placeholder: "sjobs@apple.com" %>
  </div>
  <legend>Social</legend>
  <div class="field">
    <%= f.text_field :linkedin, placeholder: "LinkedIn" %>
  </div>
  <div class="field">
    <%= f.text_field :facebook, placeholder: "Facebook" %>
  </div>
  <div class="field">
    <%= f.text_field :twitter, placeholder: "Twitter" %>
  </div>
  <legend>School</legend>
  <div class="field">
    <%= collection_select(:people, :school_id, @schools, :id, :name) %>
  </div>
  <div class="actions">
    <br>
    <%= f.submit "Submit", class: "btn btn-red" %>
  </div>
<% end %>
